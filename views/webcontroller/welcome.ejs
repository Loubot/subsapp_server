<%- partial('../partials/nav.ejs') %>

<div class="container-fluid">
  <div>
    <h1>Welcome to subzapp</h1>

    <div class="col-md-6">
      <form class="form-horizontal">
        <div class="form-group">
          <label class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            <input type="email" class="form-control" id="user_email" placeholder="Email">
          </div> <!-- end of col-sm-10 -->
        </div> <!-- end of form-group -->

        <div class="form-group">
          <label for="inputPassword3" class="col-sm-2 control-label">Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword3" placeholder="Password">
          </div> <!-- end of col-sm-10 -->
        </div> <!-- end of form-group -->

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-success login_button">Sign in</button>
          </div> <!-- end of form-group -->
        </div> <!-- end of col-sm-offset-2 col-sm-10 -->

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <a href="register" class="btn btn-info">Not registered?</a>
          </div> <!-- end of form-group -->
        </div> <!-- end of col-sm-offset-2 col-sm-10 -->

      </form> <!-- end of form-horizontal -->
    </div> <!-- end of col-md-6 -->
  </div> <!-- end of text-center -->

</div> <!-- end of container-fluid -->